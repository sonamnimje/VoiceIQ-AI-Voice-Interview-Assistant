{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "build" },
      "installCommand": "cd frontend && npm ci",
      "buildCommand": "cd frontend && npm run build"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "https://voiceiq-backend.onrender.com/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ]
}
